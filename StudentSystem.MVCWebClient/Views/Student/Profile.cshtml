@model StudentSystem.Client.Model.ResultList

@{
    ViewBag.Title = "Profile";
}
<h1 style="text-align: center;">Дипломна работа ТУ Варна 2015</h1>
<h1 style="text-align: center;">Примерно използване на библиотека за модулни приловения в Web проект</h1>

<head>
    <style>
        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }

        table#t01 tr:nth-child(even) {
            background-color: #eee;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #fff;
        }

        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>

<table id="t01">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
    </tr>
        <tr>
            <td>
                @Model.Title
            </td>
            <td>
                @Model.SubTitle
            </td>
            <td>
                @Model.Age
            </td>
        </tr>
</table>

<br/>

<table id="t01">
    <tr>
        <th>Course</th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    @foreach(var item in Model.Courses)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
        </tr>
    }
</table>